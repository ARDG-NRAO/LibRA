SUBDAG EXTERNAL   makePSF            makePSF.dag             
JOB               gatherPSF          gatherPSF.htc           
SUBDAG EXTERNAL   makeDirtyImage     makeDirtyImage.dag      
JOB               gather,normalize   gather.htc              

SCRIPT PRE        makePSF            writeGriddingDAGs.sh imageSolver.def
SCRIPT PRE        gatherPSF          makeInputFileList.sh imageSolver.def imcycle.htc psf
SCRIPT PRE        gather,normalize   makeInputFileList.sh imageSolver.def imcycle.htc dirty


VARS              ALL_NODES          jobmode="$(JOB)"
VARS              ALL_NODES          input_file="imageSolver.def"
VARS              ALL_NODES          partId="n"


PARENT            makePSF            CHILD gatherPSF
PARENT            gatherPSF          CHILD makeDirtyImage
PARENT            makeDirtyImage     CHILD gather,normalize
