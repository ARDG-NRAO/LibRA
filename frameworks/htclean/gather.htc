include: htclean.htc
include: imcycle.htc
include: input_files.htc

+SingularityImage = "/cvmfs/singularity.opensciencegrid.org/opensciencegrid/osgvo-el8:latest"

notification = Error

request_memory = $(memModel)
request_disk   = $(diskModel)

+DESIRED_SITES = "WISC-PATH"

if $(useStartImages)
    input_files = $(input_files), $(imagesdir)/$(imagename).residual.start.tar?pack=auto
endif

should_transfer_files = YES
transfer_input_files = bin, $(libra_bundle), $(softwaredir)/casa-data.tgz, $(input_files), $(imagesdir)/$(imagename).sumwt.tar?pack=auto, $(imagesdir)/$(imagename).weight.tar?pack=auto

transfer_output_remaps = "logs.$(jobmode).tgz = $(initialdir)/logs.$(jobmode).imcycle$(imcycle).tgz; $(imagename).residual.tar = $(imagesdir)/$(imagename).residual.imcycle$(imcycle).noiter.tar"

queue
